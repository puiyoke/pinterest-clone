<div id="pin-form">
  <%= form_for :pin, url: '/pins/new', id:"pin-form", remote: true do |f| %>

    *Image: <%= f.file_field :image, :required => 'required' %>
    *Title: <%= f.text_field :title %>
    Description: <%= f.text_area :description %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.submit "Submit" %>
  
  <% end %>
</div>