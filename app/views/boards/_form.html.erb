<div id="board-form">
    <%= form_for :board, url: '/boards/new' do |f| %>
        *Title: <%= f.text_field :title, :required => 'required' %>
        Description: <%= f.text_area :description %>
        <%= f.hidden_field :user_id, :value => current_user.id %>
        <%= f.submit "Submit" %>
    <% end %>
</div>