<%if @board.exists?%>
    <%@board.each do |x|%>
        <%=x.title%>
        <%= form_for :group, url: '/pins/:id/:board_id' do |f| %>

            <%= f.hidden_field :board_id, :value => x.id %>
            <%= f.hidden_field :pin_id, :value => params[:id] %>
            <%= f.submit "Add to Board" %>
          
          <% end %>
    <%end%>
<%end%>

