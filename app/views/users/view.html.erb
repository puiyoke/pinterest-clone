<h1>User Profile</h1>

<h3><%=@user.first_name%> <%=@user.last_name%></h3>
<p><%=@user.followers_count%> followers | <%=@user.follow_count%> following</p>
<p><%=@user.description%></p>

<% if @user.avatar.url.present?%>
    <%=image_tag @user.avatar_url(:thumb)%>
<% else %>
	<img src="http://res.cloudinary.com/puiyoke/image/upload/w_150,c_scale/v1527590348/default_avatar.png">
<%end%>

<div>
    <%if current_user.following?(@user)%>
        <%=button_to "Following", {action: 'unfollow', id: @user.id}, method: 'post', remote: true%>
    <%elsif current_user != @user%>
        <%=button_to "Follow", {action: 'follow', id: @user.id}, method: 'post', remote: true%>
    <%end%>
</div>

<br>
<div class="container">
    <div class="card-columns">
        <%@user.pins.each do |x|%>
            <%if x.image.present?%>
                <div class="card">
                    <a href="/pins/<%=x.id%>"><%= image_tag(x.image_url(:display), :class => "card-img") %></a>
                </div>
            <%end%>
        <%end%>
    </div>
</div>