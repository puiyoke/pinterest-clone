<h1>Edit your profile</h1>

<%= form_for :user, url: '/users/edit' do |f| %>

  Add profile image: <%= f.file_field :avatar %>
  Email: <%= f.text_field :email %>
  Password: <%= f.password_field :password %>
  First name: <%= f.text_field :first_name %>
  Last name: <%= f.text_field :last_name %>
  Prefer not to disclose<span><%= f.radio_button :gender, "not_telling" %>
  Male<span><%= f.radio_button :gender, "male" %>
  Female<span><%= f.radio_button :gender, "female" %>
  <%= f.submit "Submit" %>
  About you: <%= f.text_area :description %>
<% end %>