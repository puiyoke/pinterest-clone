<h1>Login</h1>
<br>
<div class="form-group col-md-4">
  <%= form_tag '/login' do %>
    Email: <%= text_field_tag :email, nil, class: 'form-control' %>
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small><br>
    Password: <%= password_field_tag :password, nil, class: 'form-control' %><br>
    <%=check_box_tag :remember_me, 1, params[:remember_me]%> Remember me<br><br>
    <%= submit_tag "Submit", class:"btn btn-primary" %>
  <% end %>
</form>